@{
    ViewData["Title"] = "Top Smartphones";
    string[] phones = { "iPhone 12 Pro Max", "iPhone 12 Pro", "Samsung Galaxy Note 20 Ultra", "iPhone 12","iPhone 11","Samsung Galaxy S20 FE", "iPhone 12 mini", "OnePlus 8 Pro","Google Pixel 4a","Moto G Power"  };
}

<article>
    <div class="row">
        <div class="col-s3 col-sm-1"></div>
        <div class="col-s6 col-sm-10">
            <header>
                <h1>Top 10 smartphones 2020</h1>
                <h6>By Mark Spoonauer (7 days ago)</h6>
                <img src="https://cdn.mos.cms.futurecdn.net/7iNDcbzHpB2dv7e4CSnJRf-1024-80.jpg" class="img-fluid" style="margin-top:64px" />
                <span style="color:#777; font-size:8;">(Image credit: Tom's Guide)</span>
            </header>

            <section style="margin-top:64px">

                <h4>List</h4>
                <ul class="list-group">
                    @for (int i=0; i < phones.Length; i++)
                    {
                        <li class="list-group-item">@phones[i]</li>
                    }


                </ul>
            </section>
        </div>
        <div class="col-s3 col-sm-1"></div>
    </div>
</article>